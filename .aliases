# ls
if [ "$OS" = "Linux" ]; then
    alias ls='ls -F --color=auto'
    alias l='ls -Flh --color=auto'
    alias ll='ls -Flha --color=auto'
elif [ "$OS" = "Darwin" ]; then
    alias ls='ls -FG'
    alias l='ls -FlhG'
    alias ll='ls -FlhaG'
fi

# grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# interactive
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# verbose
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'

# git
alias gs='git status --short'
alias gd='git diff'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git ls-tree -r master --name-only'

# dotfiles
if [ -d "$HOME/.dotfiles" ] && [ ! -d "$HOME/.dotfiles/.git" ]; then
    alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
    alias dfs='dotfiles status --short'
    alias dfd='dotfiles diff'
    alias dfa='dotfiles add'
    alias dfc='dotfiles commit'
    alias dfp='dotfiles push'
    alias dfl='dotfiles ls-tree -r master --name-only'
fi

# download
alias dl='aria2c -x 16'

# battery
if [ "$OS" = "Linux" ]; then
    alias W='bc -l <<< "$(cat /sys/class/power_supply/BAT0/voltage_now)*$(cat /sys/class/power_supply/BAT0/current_now)/10^12" | cut -b -4'
    alias up='uptime -p'
fi

# feh
alias feh='feh --scale-down --auto-zoom'

# tmux
alias t='tmux'
alias ta='tmux attach'
