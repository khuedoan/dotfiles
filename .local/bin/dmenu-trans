#!/bin/sh

text=$(echo "$(xclip -o)" | dmenu -p "Google Translate")

[ -z $text ] && exit 1

if [ -z "$1" ]; then
    languages=$(echo -e ":vi\n:en\n:ko" | \
                dmenu -p "Select [SOURCE]:[TARGET] languages")
else
    languages=$1
fi

[ -z "$languages" ] && exit 1

notify-send "Translate" "$(trans --brief --no-ansi "$languages" "$text")"
