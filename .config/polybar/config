[colors]
foreground         = #abb2bf
foreground-alt     = #666666
foreground-focused = #282c34
background         = #88282c34
background-focused = #abb2bf
red    = #be5046
green  = #98c379
yellow = #d19a66

[bar/topbar]
monitor = ${env:MONITOR}
enable-ipc = true
wm-restack = bspwm
height = 22
foreground = ${colors.foreground}
background = ${colors.background}
font-0 = FiraCode Nerd Font:style=Bold:size=10;2
padding-right = 1
module-margin = 1
modules-left   = bspwm
modules-right  = ethernet wlan cpu temperature memory battery backlight alsa date search
cursor-click = pointer
tray-position = right

[module/bspwm]
type = internal/bspwm
label-focused       = %name%
label-focused-empty = ·
label-occupied      = %name%
label-urgent        = %name%
label-empty         = ·
label-focused-padding        = 1
label-focused-empty-padding  = 1
label-occupied-padding       = 1
label-urgent-padding         = 1
label-empty-padding          = 1
label-focused-foreground       = ${colors.foreground-focused}
label-focused-background       = ${colors.background-focused}
label-focused-empty-foreground = ${colors.foreground-focused}
label-focused-empty-background = ${colors.background-focused}
label-urgent-foreground        = ${colors.red}

[module/ethernet]
type = internal/network
interface = ${env:ETHERNET}
format-connected-prefix    = " "
label-connected         = %local_ip%

[module/wlan]
type = internal/network
