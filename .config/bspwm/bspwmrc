#! /bin/sh

# Wallpaper
feh --bg-fill --randomize ~/Pictures/Wallpapers/*.jpg &

# Status bar
$HOME/.config/polybar/launch &

# Compositor
compton &

# Use correct pointer
xsetroot -cursor_name left_ptr &

# Key map
setxkbmap -option ctrl:nocaps,shift:both_capslock,altwin:swap_lalt_lwin,lv3:ralt_switch && xcape && sxhkd &
ibus-daemon -drx &

# Auto lock screen
xautolock -time 10 -corners ---- -locker slock &
xss-lock slock &

# Monitors
bspc config remove_disabled_monitors true
bspc config remove_unplugged_monitors true

# Workspace
bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# Border
bspc config border_width 0

# Gap
bspc config window_gap   20

# Color
bspc config normal_border_color   "#282A36"
bspc config focused_border_color  "#BD93F9"
bspc config presel_feedback_color "#BD93F9"

# Monocule
bspc config borderless_monocle true
bspc config gapless_monocle    true
bspc config single_monocle     true

# Float
bspc rule -a Lxappearance         state=floating
bspc rule -a mpv                  state=floating
bspc rule -a Surf                 state=tiled
bspc rule -a Zathura              state=tiled

# Mouse
bspc config swallow_first_click true
