{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "mcp-server-playwright"
      ],
      "enabled": true
    },
    "knowledge": {
      "type": "local",
      "command": [
        "knowledge-mcp"
      ],
      "environment": {
        "KNOWLEDGE_VAULT_PATH": "~/Documents/notes"
      },
      "enabled": true
    },
    "atlassian": {
      // Command to authenticate: opencode mcp auth atlassian
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true
    }
  }
}
